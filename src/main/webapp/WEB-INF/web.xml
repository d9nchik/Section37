<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>first</servlet-name>
        <servlet-class>FirstServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>first</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>form-test</servlet-name>
        <servlet-class>GetParameters</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>form-test</servlet-name>
        <url-pattern>/GetParameters</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>timeForm</servlet-name>
        <servlet-class>TimeForm</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>timeForm</servlet-name>
        <url-pattern>/TimeForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>exercise1</servlet-name>
        <servlet-class>exercise1.FactorialTable</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exercise1</servlet-name>
        <url-pattern>/exercise1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>exercise2</servlet-name>
        <servlet-class>exercise2.MultiplicationTable</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exercise2</servlet-name>
        <url-pattern>/exercise2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>exercise3</servlet-name>
        <servlet-class>exercise3.VisitCount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exercise3</servlet-name>
        <url-pattern>/exercise3</url-pattern>
    </servlet-mapping>
</web-app>